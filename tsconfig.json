{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "sourceMap": true,
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "paths": {
      "@src/*": ["client/src/*"],
      "@test/*": ["client/test/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["client/src"]
}
